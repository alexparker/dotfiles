set softtabstop=2
set shiftwidth=2
set tabstop=2
set expandtab
colorscheme axp_dark
set nospell
set fdm=indent
set fdc=2
nmap <C-Enter> O<Esc>
nmap <CR> o<Esc>
map <C-J> <C-W>j
map <C-K> <C-W>k
map <C-L> <C-W>l
map <C-H> <C-W>h
map <C--> <C-W>_
map <C-=> <C-W>=


" Insert mode movements
inoremap II <Esc>I
inoremap AA <Esc>A
inoremap KK <Esc>O
inoremap HH <Esc>
inoremap JJ <Esc>o

autocmd BufWritePre * :%s/\s\+$//e
